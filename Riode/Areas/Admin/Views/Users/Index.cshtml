@{
    ViewData["Title"] = "Users";
}

@model List<UserViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ProfilePhoto</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @if (user.User.Photo != null)
                                    {
                                        <img src="~/assets/images/user-profile/@user.User.Photo" />
                                    } else {
                                        <img src="~/assets/images/user-profile/no-image.webp" />
                                    }
                                </td>
                                <td>@user.User.UserName</td>
                                <td>@string.Join(", ", user.Roles)</td>
                                @if (user.User.IsActive)
                                {
                                    <td class="text-success">Active</td>
                                }
                                else
                                {
                                    <td class="text-danger">Deactive</td>
                                }

                                <td>

                                    <a class="btn btn-warning" asp-action="ChangeRoles" asp-route-id="@user.User.UserName">Change Role</a>


                                    @if (user.User.IsActive)
                                    {
                                        <a class="btn btn-danger UserBtn" asp-action="ActiveDeactive" asp-route-id="@user.User.UserName">Deactivate</a>

                                    }
                                    else
                                    {
                                        <a class="btn btn-success UserBtn" asp-action="ActiveDeactive" asp-route-id="@user.User.UserName">Activate</a>
                                    }

                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>