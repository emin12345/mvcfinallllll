@{
    ViewData["Title"] = "Category Update";
}

@model CategoryUpdateViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update category</h4>
                    @* <img class="p-image" src="~/assets/images/categories/@Model.CategoryImage"
                         alt="@Model.Name" width="300" height="200"><br>
                    <br> *@
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Category Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Title">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Replace Image</label>
                            <input class="form-control" asp-for="CategoryImage" placeholder="Category Image">
                            <span asp-validation-for="CategoryImage" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>