@{
    ViewData["Title"] = "Categories";
}


@model List<Category>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a class="btn btn-primary" asp-action="Create">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    if (!category.IsDeleted)
                                    {
                                        <tr>
                                            <td><img src="~/assets/images/categories/@category.Image" /></td>
                                            <td>@category.Name</td>
                                            <td>
                                                <a class="btn btn-info" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
