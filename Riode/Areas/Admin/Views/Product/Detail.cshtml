@{
    ViewData["Title"] = "Detail";
}

@model Product

<div class="content-wrapper">
    <div class="row d-flex">
        <div class="col-lg-8 ">
            <div class="card">
                <div class="row d-flex justify-content-center" style="width: 100%; gap: 10px;">
                    @foreach (var image in Model.Images)
                    {
                        <img class="card-img-top" src="~/assets/images/shop/@image.Image" style="max-width: 300px; max-height: 300px" alt="Card image cap">
                    }
                </div>
                <div class="card-body">
                    <h2 class="card-title d-flex justify-content-center align-items-center">@Model.Name</h2>
                    <h5>Price: $@Model.Price</h5>
                    <h5>Features: @Model.Features</h5>
                    <h5>Material: @Model.Material</h5>
                    <h5>Rating: @Model.Rating</h5>
                    <h5>Category: @Model.Category.Name</h5>
                    <h5>Manufacturer: @Model.Brand.Name</h5>
                    <h5>Description: @Model.Description</h5>
                    <div class="btn-box d-flex  mt-3 justify-content-center align-items-center">
                        <a asp-action="Index" class="btn btn-primary">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>