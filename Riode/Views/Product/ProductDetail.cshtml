									int reviewCount = 0;

									foreach (var review in Model.ProductDetail.Reviews.Where(r => r.ProductId == Model.ProductDetail.Id).ToList())
									{
										totalRating += review.Rating;
										reviewCount++;
									}
									
									double averageRating = reviewCount > 0 ? totalRating / reviewCount : 0;
								}
